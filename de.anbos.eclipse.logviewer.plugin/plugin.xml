<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
   <extension point="org.eclipse.ui.views">
      <category name="Logfile Tools" id="logfiletools"/>
      <view
            name="%logfileview.plugin.name"
            icon="icons/logfileviewer.gif"
            category="logfiletools"
            class="de.anbos.eclipse.logviewer.plugin.LogFileView"
            id="ch.mimo.eclipse.plugin.logfiletools.Logfileview">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               ratio="0.5"
               relative="org.eclipse.ui.views.TaskList"
               relationship="right"
               id="ch.mimo.eclipse.plugin.logfiletools.Logfileview">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
      point = "org.eclipse.ui.preferencePages">
       <page id="ch.mimo.eclipse.plugin.logfiletools.Logfileview.page1"
	    class="de.anbos.eclipse.logviewer.plugin.preferences.LogFileToolPreferences"
            name="%logfileview.properties.main.page.title">
       </page>
       <page id="ch.mimo.eclipse.plugin.logfiletools.Logfileview.page1.3"
        class="de.anbos.eclipse.logviewer.plugin.preferences.color.ColorPreferencePage"
            name="%logfileview.properties.coloring.page.title"
            category="ch.mimo.eclipse.plugin.logfiletools.Logfileview.page1">
       </page>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            label="%logfileview.actionset.name"
            visible="true"
            id="ch.mimo.eclipse.plugin.logfiletools.actionset">
         <action
               toolbarPath="Normal/additions"
               label="%logfileview.action.openfile.name"
               icon="icons/logfileviewer.gif"
               tooltip="Open the logfile view in the current workbench page"
               class="de.anbos.eclipse.logviewer.plugin.action.FileOpenWorkbenchAction"
               style="push"
               menubarPath="File/content"
               id="ch.mimo.eclipse.plugin.logfiletools.action.fileopen"/>
      </actionSet>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="false"
            id="ch.mimo.eclipse.plugin.logfiletools.logfileview.objectContribution1"
            objectClass="org.eclipse.core.runtime.IAdaptable">
         <action
               class="de.anbos.eclipse.logviewer.plugin.action.FileOpenAction"
               enablesFor="+"
               icon="icons/logfileviewer.gif"
               id="ch.mimo.eclipse.plugin.logfiletools.action.fileopen.menu"
               label="%logfileview.action.openwith.name"
               menubarPath="additions"
               tooltip="Open the logfile view for selected files">
         </action>
      </objectContribution>
   </extension>
</plugin>
